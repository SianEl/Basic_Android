<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--
        android:orientation = LinearLayout 뷰의 필수 속성으로 LinearLayout 내부에 뷰들을 어느 방향으로 쌓을지 결정하는 속성
        속성값 = vertical(세로방향) | horizontal(가로방향)
    -->

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="Button" />

    <!-- android:textSize : 텍스트의 크기를 설정하는 속성 단위는 sp -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- LinearLayout 안에 다른 orientation값을 갖는 LinearLayout을 넣어 복잡한 형태를 구현할 수 있다.  -->

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Button" />

        <!-- android:gravity = 뷰 내부의 정렬을 설정하는 속성 -->

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Button" />

        <!-- android:layout_gravity : 뷰 자체가 부모에 대해 정렬을 설정하는 속성 -->

    </LinearLayout>

</LinearLayout>